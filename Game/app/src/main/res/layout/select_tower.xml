<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/repeat_background">
    <TextView

        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="0dp"
        android:font="@font/font"
        android:fontFamily="@font/font"
        android:text="Beware, every tower has a cost.You can \nearn points by killing monsters" />

    <ImageView
        android:id="@+id/fireTower"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_x="20dp"
        android:layout_y="50dp"
        android:src="@drawable/autogeneratedlevel" />
    <ImageView
        android:id="@+id/stormTower"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_x="20dp"
        android:layout_y="210dp"

        android:src="@drawable/level3" />
    <ImageView
        android:id="@+id/poisonTower"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_x="170dp"
        android:layout_y="50dp"

        android:src="@drawable/level1" />
    <ImageView
        android:id="@+id/iceTower"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_x="170dp"
        android:layout_y="210dp"

        android:src="@drawable/level2" />

    <TextView

        android:id="@+id/level2txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="55dp"
        android:layout_y="140dp"
        android:font="@font/font"
        android:fontFamily="@font/font"
        android:text="Fire (2)" />
    <TextView

        android:id="@+id/level1txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="195dp"
        android:layout_y="140dp"
        android:font="@font/font"
        android:fontFamily="@font/font"
        android:text="Poison (3)" />

    <TextView

        android:id="@+id/level3txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="45dp"
        android:layout_y="300dp"
        android:font="@font/font"
        android:fontFamily="@font/font"
        android:text="Storm (4)" />

    <TextView

        android:id="@+id/levelautotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="208dp"
        android:layout_y="300dp"
        android:font="@font/font"
        android:fontFamily="@font/font"
        android:text="Ice (8)" />


        <requestFocus />

</AbsoluteLayout>
