<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="main.menuactivity.menufragments.SelectLevelFragment"
    >

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Back button-->
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="0dp"
            android:src="@drawable/back" />

        <!-- Ghost and dialog -->

        <ImageView
            android:id="@+id/ghost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="30dip"
            android:layout_y="130dip"
            android:src="@drawable/preparethetroops" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloud"
            android:layout_x="20dip"
            android:layout_y="10dip"
            android:id="@+id/cloud"/>

        <TextView

            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="50dp"
            android:layout_y="55dp"
            android:font="@font/font"
            android:fontFamily="@font/font"
            android:text="@string/prepare_the_solders" />

        <!-- major-->
        <ImageView
            android:id="@+id/ghostmajor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="280dip"
            android:layout_y="100dip"
            android:src="@drawable/yes_sir" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloudmajor"
            android:layout_x="200dip"
            android:layout_y="10dip"
            android:id="@+id/cloudmajor"/>

        <TextView

            android:id="@+id/textmajor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="250dp"
            android:layout_y="53dp"
            android:font="@font/font"
            android:fontFamily="@font/font"
            android:text="@string/major_yes_sir" />






        <!-- Background , title , buttons and labels-->



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg" />

        <TextView

            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="95dp"
            android:layout_y="210dp"
            android:font="@font/font"
            android:fontFamily="@font/font"
            android:text="@string/title"
            android:textColor="#c0d41b"
            android:textSize="65px" />

        <ImageView
            android:id="@+id/level1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_x="30dp"
            android:layout_y="280dp"
            android:src="@drawable/level1" />
        <ImageView
            android:id="@+id/level2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_x="30dp"
            android:layout_y="420dp"

            android:src="@drawable/level2" />
        <ImageView
            android:id="@+id/level3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_x="230dp"
            android:layout_y="280dp"

            android:src="@drawable/level3" />
        <ImageView
            android:id="@+id/autogeneratedlevel"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_x="230dp"
            android:layout_y="420dp"

            android:src="@drawable/autogeneratedlevel" />

        <!-- Game levels , 1 though 3 or autogenerated-->

        <!-- AKAZOO-->
        <TextView

        android:id="@+id/level2txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="370dp"
        android:font="@font/font"
        android:fontFamily="@font/font"
        android:text="Level 1" />
        <TextView

            android:id="@+id/level1txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="265dp"
            android:layout_y="370dp"
            android:font="@font/font"
            android:fontFamily="@font/font"
            android:text="Level 2" />

        <TextView

            android:id="@+id/level3txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="65dp"
            android:layout_y="510dp"
            android:font="@font/font"
            android:fontFamily="@font/font"
            android:text="Level3" />

        <TextView

            android:id="@+id/levelautotxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="265dp"
            android:layout_y="510dp"
            android:font="@font/font"
            android:fontFamily="@font/font"
            android:text="Level 4" />


    </AbsoluteLayout>

</RelativeLayout>